<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/my_loading_page">
        <TextView
            android:id="@+id/textview_english_xml"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="KANARASE"
            android:textColor="#FFF"
            android:textSize="30dp"
            android:layout_marginBottom="45dp"
            android:layout_centerHorizontal="true"
            android:layout_above="@+id/textview_blank_xml"
            />
        <TextView
            android:id="@+id/textview_blank_xml"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"/>
        <TextView
            android:id="@+id/textview_kannada_xml"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ಕನರಾಸೆ"
            android:textColor="#FFF"
            android:textSize="30dp"
            android:layout_centerInParent="true"
            android:layout_marginTop="45dp"
            android:layout_below="@+id/textview_blank_xml"/>
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>